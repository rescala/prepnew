<div class="container p-4">
    <div class="row">
        <div class="container">
            <h3>Lista de Promotores</h3>
        </div>
        <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 50vh;">
            <table id="example" class="table table-bordered table-striped mb-0" style="width: 100%;">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido Paterno</th>
                        <th scope="col">Apellido Materno</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Comunidad</th>
                        <th scope="col">Sección</th>
                        <th scope="col">Contraseña</th>
                        <td scope="col">Promovidos</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each delegados}}
                    <tr>
                        <td>{{nombres}}</td>
                        <td>{{ape_pat}}</td>
                        <td>{{ape_mat}}</td>
                        <td>{{telefono}}</td>
                        <td>{{comunidad}}</td>
                        <td>{{seccion}}</td>
                        <td>{{pw}}</td>
                        <td class="text-center"><a href="/delegados/promovidos/{{id}}"><i class="fas fa-list"></i></a>
                        </td>
                    </tr>

                    {{else}}
                    <tr>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>

        <style>
            .my-custom-scrollbar {
                position: relative;
                height: 200px;
                overflow: auto;
            }

            .table-wrapper-scroll-y {
                display: block;
            }
        </style>
       
    </div>
</div>
 