<div class="container p-4">
    <button type="button" class="btn btn-secondary"><a style="text-decoration: none; color: white;"
            href="/delegados/"><i class="fas fa-undo"></i> Cancelar</a></button>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="P-3">
                        <h3>Registrar Promotor</h3>
                    </div>
                    <form action="/delegados/add" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" name="nombres" placeholder="Nombre" autofocus
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" name="ape_pat" placeholder="Apellido Paterno"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" name="ape_mat" placeholder="Apellido Materno"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" maxlength="10" name="telefono"
                                placeholder="Teléfono" required>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" name="comunidad" placeholder="Comunidad" required>
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" maxlength="4" name="seccion" placeholder="Sección"
                                required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>