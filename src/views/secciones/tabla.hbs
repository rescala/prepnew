<div class="container p-4">
  <div class="row">
    <div class="col-md-12">
      <h3>Municipios</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Municipio</th>
            <th scope="col">Secciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each municipio}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{nombre}} </td>
            <td><a href="/mpios/secciones/{{id}}">Secciones</a></td>
          </tr>
          {{else}}
          <tr>
            <th scope="row"> </th>
            <td>Sin Datos</td>
            <td>Sin Datos</td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</div>