<div class="container p-4">
    <div class="row">
        <div class="container">
            <h3>Lista de Promotores</h3>
        </div>
        <div class="container m-2">
        <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 35vh;">
            <table id="example" class="table table-bordered table-striped mb-0" style="width: 90%;">
                <thead>
                    <tr>
                        <th scope="id">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">N-Prom</th>
                        <th scope="col">Voto</th>
                        <th scope="col">FxV</th>
                        <th scope="col">Detalle</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each delegados}}
                    <tr>
                        <td class="id">{{id}}</td>
                        <td>{{ape_pat}} {{ape_mat}} {{nombres}}</td>
                        <td><a href='tel:{{telefono}}'>{{telefono}}</a></td>
                        <td>{{referidos}}</td>
                        <td>{{voto}}</td>
                        <td>{{fxv}}</td>
                        <td><button class="ver_referidos btn btn-primary" id="ver_referidos"><i class="far fa-eye"></i></button> </td>

                    </tr>

                    {{else}}
                    <tr>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
       
    </div>
</div>
<div class="modal fade" id="Modal_Detalles" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form action="/delegados/promovidos/add/{{delegado3}}" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Referidos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="col-md-12" style="height: 60vh; overflow:auto;">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Buscar</span>
                        <input type="text" id="buscar" class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-sm">
                    </div>
                    <table id="example6" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Sección</th>
                                <th scope="col">Casilla</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Dirección</th>
                                <th scope="col">Teléfono</th>
                            </tr> 
                        </thead>

                        <tbody>
                            
                        </tbody>
                    </table>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </form>
        </div>
    </div>
</div>